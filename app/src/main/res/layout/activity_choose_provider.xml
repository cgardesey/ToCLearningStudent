<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChooseProviderActivity">

    <TextView
        android:layout_margin="16dp"

        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your location is Ghana. Please select your payment option."/>

    <RadioGroup
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/textView"
        android:id="@+id/radioProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/mtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="MTN" />

        <RadioButton
            android:id="@+id/vodafone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vodafone" />

        <RadioButton
            android:id="@+id/tigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tigo" />

    </RadioGroup>

    <LinearLayout
        android:gravity="bottom"
        android:layout_margin="16dp"
        android:layout_below="@id/radioProvider"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_marginRight="4dp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_edge_button"
            android:layout_height="wrap_content"
            android:text="Back"/>
        <Button
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"
            android:background="@drawable/rounded_edge_button"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Ok"/>
    </LinearLayout>

</RelativeLayout>